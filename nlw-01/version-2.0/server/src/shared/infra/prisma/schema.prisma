generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String
  name     String
  email    String @unique()
  password String

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  point Point[]

  @@map("users")
}

model Item {
  id    String @id @default(uuid())
  title String
  path  String

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  point_items PointItems[]

  @@map("items")
}

model Point {
  id        String @id @default(uuid())
  name      String
  email     String @unique()
  whatsapp  String @unique()
  latitude  String
  longitude String
  city      String
  uf        String
  image     String

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  point_items PointItems[]

  user       User   @relation(fields: [fk_user_id], references: [id])
  fk_user_id String

  @@map("points")
}

model PointItems {
  id String @id @default(uuid())

  item       Item   @relation(fields: [fk_item_id], references: [id])
  fk_item_id String

  point       Point  @relation(fields: [fk_point_id], references: [id])
  fk_point_id String

  @@map("point_itens")
}
